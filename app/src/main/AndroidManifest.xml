<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.court.admasset.admasset">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- CAMERA 사용권한 획득 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.hardware.camera.autofocus" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name=".Network.ApplicationController"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".DialogActivity" />
        <activity android:name=".SendMsgActivity" />
        <activity android:name=".WaitingAssetActivity" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".SummaryActivity" />
        <activity android:name=".RecyclerViewActivity" />
        <activity android:name=".BarcodeReaderActivity" />
        <activity android:name=".SearchAssetListActivity"/>
        <activity android:name=".NotFoundDialogActivity"/>

    </application>

</manifest>