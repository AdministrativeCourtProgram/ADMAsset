<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="AppleSDGothicNeo-UltraLight"
            android:gravity="center"
            android:text="@string/summary_title"
            android:textColor="#000"
            android:textSize="21sp"
            android:textStyle="bold" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        app:srcCompat="@drawable/line_rectangle" />

    <TextView
        android:id="@+id/checked4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="133dp"
        android:fontFamily="AppleSDGothicNeo-UltraLight"
        android:text="Checked"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/allasset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/checked4"
        android:layout_marginEnd="83dp"
        android:fontFamily="AppleSDGothicNeo-UltraLight"
        android:text="All asset"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/checkedNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="173dp"
        android:fontFamily="AppleSDGothicNeo-UltraLight"
        android:textColor="#000"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/allNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/checkedNum"
        android:layout_marginEnd="117dp"
        android:fontFamily="AppleSDGothicNeo-UltraLight"
        android:textColor="#000"
        android:textSize="60sp" />

    <ImageButton
        android:id="@+id/homeBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="36dp"
        android:background="@android:color/transparent"
        android:src="@drawable/home"

        >

    </ImageButton>

    <Button
        android:id="@+id/showchecked"
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="176dp"
        android:background="@color/maincolor"
        android:fontFamily="AppleSDGothicNeo-UltraLight"
        android:text="Show checked Asset"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/showWaiting"
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:background="@color/maincolor"
        android:fontFamily="AppleSDGothicNeo-UltraLight"
        android:text="Show waiting to check"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>