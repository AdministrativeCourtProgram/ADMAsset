<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaitingAssetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="14dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="AppleSDGothicNeo-UltraLight"
            android:gravity="center"
            android:text="@string/committee"
            android:textColor="#000"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="AppleSDGothicNeo-UltraLight"
            android:gravity="center"
            android:text="@string/waiting"
            android:textColor="#000"
            android:textSize="21sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="AppleSDGothicNeo-UltraLight"
            android:gravity="center"
            android:text="@string/waiting2"
            android:textStyle="bold"
            android:layout_weight="0.2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/title_workgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/maincolor"
            android:fontFamily="AppleSDGothicNeo-UltraLight"
            android:padding="5dp"
            android:text="@string/select_workgroup"
            android:textColor="#000"
            android:textSize="20sp"
             />

        <Spinner
            android:id="@+id/workgroupList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:prompt="@string/select_workgroup" />
        <TextView
            android:id="@+id/title_floor"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="AppleSDGothicNeo-UltraLight"
            android:background="@color/maincolor"
            android:text="@string/select_floor"
            android:textColor="#000"
            android:textSize="20sp"
             />

        <Spinner
            android:id="@+id/floorList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:prompt="@string/select_floor" />
        <TextView
            android:id="@+id/title_room"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="AppleSDGothicNeo-UltraLight"
            android:text="@string/select_room"
            android:background="@color/maincolor"
            android:textColor="#000"
            android:textSize="20sp"
            />

        <Spinner
            android:id="@+id/roomList"
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/select_room" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"/>

        <Button
            android:id="@+id/searchAssetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/maincolor"
            android:textColor="#FFFF"
            android:layout_above="@id/homeBtn"
            android:text="@string/searchAsset"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"/>

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0.05"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/home" />

    </LinearLayout>

</RelativeLayout>