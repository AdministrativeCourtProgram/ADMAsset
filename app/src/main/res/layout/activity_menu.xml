<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout tools:context=".MenuActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="AppleSDGothicNeo-UltraLight"
        android:textSize="21sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/menu_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="7"

            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:fontFamily="AppleSDGothicNeo-UltraLight"
                android:textSize="18sp"
                android:textColor="#000"
                android:text="@string/menu_btn1"
                android:textAllCaps="false"
                android:background="#669B9B9B"
                android:onClick="onClick"
                android:id="@+id/checkAssetBtn"
                android:layout_weight="0.4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:fontFamily="AppleSDGothicNeo-UltraLight"
                android:textSize="18sp"
                android:textColor="#000"
                android:text="@string/menu_btn2"
                android:textAllCaps="false"
                android:background="#669B9B9B"
                android:onClick="onClick"
                android:id="@+id/listViewBtn"
                android:layout_weight="0.4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:fontFamily="AppleSDGothicNeo-UltraLight"
                android:textSize="18sp"
                android:textColor="#000"
                android:text="@string/menu_btn3"
                android:textAllCaps="false"
                android:background="#669B9B9B"
                android:onClick="onClick"
                android:id="@+id/assetReportBtn"
                android:layout_weight="0.4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:fontFamily="AppleSDGothicNeo-UltraLight"
                android:textSize="18sp"
                android:textColor="#000"
                android:text="@string/logout"
                android:textAllCaps="false"
                android:background="#669B9B9B"
                android:onClick="onClick"
                android:id="@+id/logOutBtn"
                android:layout_weight="0.4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>
    </LinearLayout>
</LinearLayout>